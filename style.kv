#:import get_color_from_hex kivy.utils.get_color_from_hex

<Screen>:
    canvas.before:
        Color:
            rgba: get_color_from_hex("#1a1918")  # синій фон для всіх Screen
        Rectangle:
            pos: self.pos
            size: self.size

<BoxLayout>:
    orientation: "vertical"
    padding: 20
    spacing: 10

<Button>:
    font_size: 45
    background_color: get_color_from_hex("#858179")
    color: get_color_from_hex("#e5e4e2")

<Label>:
    font_size: 42
    color: get_color_from_hex("#e5e4e2")